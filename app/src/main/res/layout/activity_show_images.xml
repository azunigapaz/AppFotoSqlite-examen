<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowImagesActivity">

    <Button
        android:id="@+id/showContactosBtn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Obtener Contactos" />

    <ImageView
        android:id="@+id/btnvolvermainactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/showContactosBtn"
        android:src="@drawable/volver_icono"/>

    <EditText
        android:id="@+id/buscarcontactos_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showContactosBtn"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Buscar Contactos"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:maxLines="1"
        android:textColor="@android:color/black" />

    <ListView
        android:id="@+id/contactoslistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/buscarcontactos_input"/>

