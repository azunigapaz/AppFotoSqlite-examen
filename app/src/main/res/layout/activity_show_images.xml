<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowImagesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnvolvermainactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/buscarcontactos_input"
                android:src="@drawable/volver_icono" />

            <EditText
                android:id="@+id/buscarcontactos_input"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="15dp"
                android:hint="Buscar Contactos"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:maxLines="1"
                android:textColor="@android:color/black" />

            <ListView
                android:id="@+id/contactoslistview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/buscarcontactos_input"
                android:layout_marginTop="5dp" />
        </RelativeLayout>
    </LinearLayout>

