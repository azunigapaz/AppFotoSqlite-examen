<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <TextView
        android:id="@+id/sr_imageDetailsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/sr_imageIV"
        android:paddingLeft="10dp"
        android:text="Nombre Contacto"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/sr_telefonocontactoTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_toRightOf="@+id/sr_imageIV"
        android:paddingLeft="10dp"
        android:text="Telefono Contacto"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sr_longitudcontactoTV"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_toRightOf="@+id/sr_imageIV"
        android:paddingLeft="10dp"
        android:text="Longitud:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sr_cantidadlongitudcontactoTV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_toRightOf="@+id/sr_longitudcontactoTV"
        android:paddingLeft="10dp"
        android:text="0.00"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sr_latitudcontactoTV"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_toRightOf="@+id/sr_cantidadlongitudcontactoTV"
        android:paddingLeft="10dp"
        android:text="Latitud:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sr_cantidadlatitudcontactoTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sr_latitudcontactoTV"
        android:layout_marginLeft="265dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:text="0.00"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/sr_imageIV"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mood" />
</RelativeLayout>